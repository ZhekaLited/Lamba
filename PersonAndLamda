
package com.company.magicBox;

    public class Person {
        String name;
        String surname;

        public Person(String name, String surname) {


            this.name

                    = name;
            this.surname = surname;
        }

        public Person() {

        }

        public String getName() {
            return name;
        }

        public String getSurname() {
            return surname;
        }

        public String getSurmame() {
            return surname;
        }
    }


